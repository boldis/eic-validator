# EIC/EAN Validation Service - Environment Configuration
# Copy this file to .env and adjust values as needed

# Application Environment
# Options: development, production
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Uvicorn Configuration
UVICORN_WORKERS=1
UVICORN_LOG_LEVEL=info

# CORS Configuration
# Comma-separated list of allowed origins
# Use "*" for development only, specify exact origins in production
CORS_ORIGINS=*

# API Configuration
API_TITLE="EIC/EAN Validation Service"
API_VERSION=0.1.0
API_DESCRIPTION="API for validating Energy Identification Codes (EIC) and European Article Numbers (EAN)"

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting (if implemented)
# RATE_LIMIT_PER_MINUTE=60
# RATE_LIMIT_BURST=10

# Feature Flags
# ENABLE_EIC_VALIDATION=true
# ENABLE_EAN_VALIDATION=true
# ENABLE_BULK_GENERATION=true

# Monitoring & Observability (if implemented)
# SENTRY_DSN=
# PROMETHEUS_ENABLED=false

# Security (if authentication is implemented)
# SECRET_KEY=your-secret-key-here-change-in-production
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (if database is added in the future)
# DATABASE_URL=postgresql://user:password@localhost:5432/eic_validator
# DB_POOL_SIZE=5
